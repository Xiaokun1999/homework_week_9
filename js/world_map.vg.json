{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 800,
  "height": 600,
  "title": {"text": "COVID-19 Deaths cases in July 2020", "frame": "group"},
  "data": [
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/Xiaokun1999/homework_week_9/main/data/country_wise_latest.csv",
      "format": {"type": "csv", "delimiter": ","}
    },
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/Xiaokun1999/homework_week_9/main/js/world_map.geo.json",
      "format": {"type": "topojson", "feature": "world_map.geo", "parse": {}},
      "transform": [
        {
          "type": "formula",
          "expr": "datum[\"properties\"] && datum[\"properties\"][\"name\"]",
          "as": "properties.name"
        },
        {
          "type": "lookup",
          "from": "source_1",
          "key": "Country/Region",
          "fields": ["properties.name"],
          "values": [
            "Confirmed",
            "Deaths",
            "Recovered",
            "Active",
            "Deaths / 100 Cases"
          ]
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"Deaths / 100 Cases\"]) && isFinite(+datum[\"Deaths / 100 Cases\"])"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[width, height]"},
      "fit": {"signal": "data('source_0')"},
      "type": "equirectangular"
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"scale": "color", "field": "Deaths / 100 Cases"},
          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"properties.name\"]) ? datum[\"properties.name\"] : \"\"+datum[\"properties.name\"], \"Confirmed\": format(datum[\"Confirmed\"], \"\"), \"Deaths\": format(datum[\"Deaths\"], \"\"), \"Recovered\": format(datum[\"Recovered\"], \"\"), \"Active\": format(datum[\"Active\"], \"\"), \"Deaths / 100 Cases\": format(datum[\"Deaths / 100 Cases\"], \"\")}"
          },
          "ariaRoleDescription": {"value": "geoshape"},
          "description": {
            "signal": "\"Deaths / 100 Cases: \" + (format(datum[\"Deaths / 100 Cases\"], \"\")) + \"; Country: \" + (isValid(datum[\"properties.name\"]) ? datum[\"properties.name\"] : \"\"+datum[\"properties.name\"]) + \"; Confirmed: \" + (format(datum[\"Confirmed\"], \"\")) + \"; Deaths: \" + (format(datum[\"Deaths\"], \"\")) + \"; Recovered: \" + (format(datum[\"Recovered\"], \"\")) + \"; Active: \" + (format(datum[\"Active\"], \"\"))"
          }
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "threshold",
      "domain": [2, 4, 6, 10],
      "range": ["#fc9272", "#fb6a4a", "#ef3b2c", "#cb181d", "#99000d"],
      "interpolate": "hcl"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "labelOverlap": "greedy",
      "symbolType": "circle",
      "title": "Deaths / 100 Cases"
    }
  ],
  "config": {}
}